<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/product1_list"
        android:layout_width="100dp"
        android:layout_height="134dp"

        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/product1_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textColor="@color/black"
        android:fontFamily="@font/tenor"
        android:textSize="17dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintStart_toEndOf="@id/product1_list"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/product1_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="@font/tenor"
        android:textSize="15.5dp"
        android:textColor="@color/black"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/product1_brand"
        app:layout_constraintStart_toEndOf="@id/product1_list"/>

    <TextView
        android:id="@+id/prices_categorylist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="2dp"
        android:textSize="15dp"
        android:textColor="@color/dollar"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/product1_name"
        app:layout_constraintStart_toEndOf="@id/product1_list"/>

    <TextView
        android:id="@+id/ratings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_baseline_star_24"
        android:text="4.8 Ratings"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/product1_list"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:drawablePadding="5dp"
        app:layout_constraintTop_toBottomOf="@id/prices_categorylist"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Size"
        android:textColor="@color/black"
        android:layout_marginLeft="15dp"
        android:fontFamily="@font/tenor"
        android:layout_marginTop="10dp"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@id/ratings"
        app:layout_constraintStart_toEndOf="@id/product1_list"/>

    <TextView
        android:id="@+id/small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circleoutline"
        android:text="S"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        android:textSize="15dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/ratings"
        app:layout_constraintStart_toEndOf="@+id/size"/>

    <TextView
        android:id="@+id/medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circleoutline"
        android:text="M"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        android:layout_marginLeft="5dp"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/ratings"
        app:layout_constraintStart_toEndOf="@+id/small"/>

    <TextView
        android:id="@+id/large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circleoutline"
        android:text="L"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        android:textSize="15dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@id/ratings"
        app:layout_constraintStart_toEndOf="@+id/medium"/>


    <ImageView
        android:id="@+id/heart"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:src="@drawable/heart"
        android:layout_marginRight="40dp"
        app:layout_constraintTop_toBottomOf="@id/ratings"
        app:layout_constraintRight_toRightOf="parent"
        app:tint="@color/black" />

</androidx.constraintlayout.widget.ConstraintLayout>