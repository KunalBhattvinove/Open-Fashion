<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Screens.Card">


    <TextView
        android:id="@+id/payment_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="23dp"

        android:textColor="@color/black"
        android:layout_marginTop="50dp"
        android:text="PAYMENT METHOD"
        android:fontFamily="@font/tenor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/divider9"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:src="@drawable/divider"
        app:layout_constraintTop_toBottomOf="@id/payment_method"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/divider9"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <ImageView
                android:id="@+id/cardblack"
                android:layout_width="410dp"
                android:layout_height="220dp"
                android:src="@drawable/card"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <ImageView
                android:id="@+id/mastercard"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:src="@drawable/mastercard"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please\n Enter your card details.."
                android:fontFamily="@font/tenor"
                android:textSize="25dp"
                android:padding="20dp"
                android:layout_marginTop="30dp"
                android:textAlignment="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mastercard"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/name_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name On Card"

        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/tenor"
        app:layout_constraintTop_toBottomOf="@id/card"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <EditText
        android:id="@+id/cardnumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Card Number"
        android:inputType="number"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/tenor"
        app:layout_constraintTop_toBottomOf="@id/name_payment"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <EditText
        android:id="@+id/exp_month"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:hint="Exp Month"
        android:inputType="number"
        android:maxLength="2"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/tenor"
        app:layout_constraintTop_toBottomOf="@id/cardnumber"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <EditText
        android:id="@+id/exp_year"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:hint="Exp Year"
        android:inputType="number"
        android:maxLength="4"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/tenor"
        android:textColorHint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/cardnumber"
        app:layout_constraintRight_toRightOf="parent"
        />

    <EditText
        android:id="@+id/cvv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="CVV"
        android:inputType="numberPassword"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:textColorHint="@color/black"
        android:fontFamily="@font/tenor"
        android:maxLength="3"
        app:layout_constraintTop_toBottomOf="@id/exp_year"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:text="ADD CARD"
        android:id="@+id/addcard12"
        android:textColor="@color/white"
        android:fontFamily="@font/tenor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>