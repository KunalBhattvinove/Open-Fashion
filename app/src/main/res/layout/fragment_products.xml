<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Screens.Products">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-40dp"
        tools:layout_editor_absoluteY="-352dp"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">


            <TextView
                android:id="@+id/totalnumbers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4500 APPAREL"
                android:textColor="@color/black"
                android:fontFamily="@font/tenor"
                android:layout_marginTop="65dp"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:textSize="13dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/newmenu"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="New"
                android:textColor="@color/black"
                android:textSize="10dp"
                android:layout_marginLeft="230dp"
                android:fontFamily="@font/tenor"
                android:padding="10dp"
                android:drawableEnd="@drawable/ic_baseline_arrow_downward_24"
                android:drawableTint="@color/black"
                android:backgroundTint="@color/grey"
                android:layout_marginTop="60dp"
                android:background="@drawable/round"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <ImageView
                android:id="@+id/listview"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/listview"
                android:background="@drawable/round"
                android:backgroundTint="@color/grey"
                android:layout_marginLeft="6dp"
                app:layout_constraintStart_toEndOf="@id/newmenu"
                android:padding="5dp"

                android:layout_marginTop="60dp"
               app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:tint="@color/black"
                tools:ignore="UseAppTint" />

            <ImageView
                android:id="@+id/view"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/view"
                android:background="@drawable/round"
                android:backgroundTint="@color/grey"
                android:layout_marginLeft="6dp"
                app:layout_constraintStart_toEndOf="@id/listview"
                android:padding="3dp"
                android:layout_marginTop="60dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:tint="@color/black" />


           <androidx.recyclerview.widget.RecyclerView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:id="@+id/productlistrecycler"
               app:layout_constraintTop_toBottomOf="@id/view"
               app:layout_constraintStart_toStartOf="parent"
               >

           </androidx.recyclerview.widget.RecyclerView>

            <TextView
                android:id="@+id/index1"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/outlinerectangle"
                app:layout_constraintTop_toBottomOf="@id/productlistrecycler"
                android:layout_marginLeft="100dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_marginTop="20dp"

                android:fontFamily="@font/tenor"
                android:padding="5dp"
                android:textAlignment="center"
                android:text="1"
                />

            <TextView
                android:id="@+id/index2"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/outlinerectangle"
                app:layout_constraintTop_toBottomOf="@id/productlistrecycler"
                app:layout_constraintStart_toEndOf="@id/index1"
                app:layout_constraintLeft_toLeftOf="parent"

                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/tenor"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:textAlignment="center"
                android:text="2"
                />

            <TextView
                android:id="@+id/index3"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/outlinerectangle"
                app:layout_constraintTop_toBottomOf="@id/productlistrecycler"
                app:layout_constraintStart_toEndOf="@id/index2"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/tenor"
                android:padding="5dp"
                android:textAlignment="center"
                android:layout_marginLeft="10dp"
                android:text="3"
                />

            <TextView
                android:id="@+id/index4"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/outlinerectangle"
                app:layout_constraintTop_toBottomOf="@id/productlistrecycler"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toEndOf="@id/index3"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/tenor"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:textAlignment="center"
                android:text="4"
                />

            <TextView
                android:id="@+id/index5"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/outlinerectangle"
                app:layout_constraintTop_toBottomOf="@id/productlistrecycler"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toEndOf="@id/index4"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/tenor"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:textAlignment="center"
                android:text="5"
                />

            <ImageView
                android:id="@+id/twitter"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/twitter"
                app:layout_constraintTop_toBottomOf="@id/index3"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="130dp"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <ImageView
                android:id="@+id/instafollow"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/instablack"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/index3"
                android:layout_marginTop="40dp"/>

            <ImageView
                android:id="@+id/youtube"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/youtube"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/index3"
                android:layout_marginRight="130dp"
                android:layout_marginTop="38dp"/>

            <ImageView
                android:id="@+id/divider3"
                android:layout_width="125dp"
                android:layout_height="10dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/divider"
                app:layout_constraintTop_toBottomOf="@id/instafollow"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

            <TextView
                android:id="@+id/support"
                android:layout_width="184dp"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="support@openui.design"
                android:fontFamily="@font/tenor"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/divider3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/number"
                android:layout_width="184dp"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="+60 825 876"
                android:fontFamily="@font/tenor"
                android:textColor="@color/black"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/support"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="70dp"/>

            <TextView
                android:id="@+id/time"
                android:layout_width="184dp"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="08:00 - 22:00 - Everyday"
                android:fontFamily="@font/tenor"
                android:textColor="@color/black"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/number"
                android:layout_marginTop="5dp" />

            <ImageView
                android:id="@+id/divider5"
                android:layout_width="125dp"
                android:layout_height="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/divider"
                app:layout_constraintTop_toBottomOf="@id/time"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

            <TextView
                android:id="@+id/About"
                android:layout_width="47dp"
                android:layout_height="24dp"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:text="About"
                android:fontFamily="@font/tenor"
                app:layout_constraintTop_toBottomOf="@id/divider5"
                android:layout_marginLeft="90dp"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/contact"
                android:layout_width="67dp"
                android:layout_height="24dp"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:text="Contact"
                android:fontFamily="@font/tenor"
                app:layout_constraintTop_toBottomOf="@id/divider5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/blogg"
                android:layout_width="47dp"
                android:layout_height="24dp"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:text="Blog"
                android:layout_marginLeft="270dp"
                android:fontFamily="@font/tenor"
                app:layout_constraintTop_toBottomOf="@id/divider5"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginBottom="50dp"
                />






        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>