<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Screens.Productslistview">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-40dp"
        tools:layout_editor_absoluteY="-352dp"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">



            <TextView
                android:id="@+id/totalnumbers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4500 APPAREL"
                android:fontFamily="@font/tenor"
                android:layout_marginTop="75dp"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:textSize="13dp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/newmenu"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="New"
                android:textSize="10dp"
                android:textColor="@color/black"
                android:layout_marginLeft="230dp"
                android:fontFamily="@font/tenor"
                android:padding="10dp"
                android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
                android:backgroundTint="@color/grey"
                android:layout_marginTop="70dp"
                android:background="@drawable/round"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <ImageView
                android:id="@+id/listview3"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/listview"
                android:background="@drawable/round"
                android:backgroundTint="@color/grey"
                android:layout_marginLeft="6dp"
                app:layout_constraintStart_toEndOf="@id/newmenu"
                android:padding="5dp"
                android:layout_marginTop="70dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:tint="@color/black" />

            <ImageView
                android:id="@+id/view"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/view"
                android:background="@drawable/round"
                android:backgroundTint="@color/grey"
                android:layout_marginLeft="6dp"
                app:layout_constraintStart_toEndOf="@id/listview3"
                android:padding="3dp"
                android:layout_marginTop="70dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:tint="@color/black" />


            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/view"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/listviewrecycler"
                android:layout_marginTop="20dp">

            </androidx.recyclerview.widget.RecyclerView>




        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>