<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-40dp"
        tools:layout_editor_absoluteY="-352dp"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">


            <TextView
                android:id="@+id/add_shipping_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="23dp"
                android:textColor="@color/black"
                android:layout_marginTop="50dp"
                android:text="OUT STORY"
                android:fontFamily="@font/tenor"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/divider9"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:src="@drawable/divider"
                app:layout_constraintTop_toBottomOf="@id/add_shipping_add"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/ourstory_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/story"
                android:textColor="@color/black"
                android:fontFamily="@font/tenor"
                android:textAlignment="textStart"
                android:padding="15dp"
                android:textSize="15dp"
                app:layout_constraintTop_toBottomOf="@id/divider9"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="23dp"
                android:textColor="@color/black"
                android:layout_marginTop="50dp"
                android:text="SIGN UP"
                android:fontFamily="@font/tenor"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ourstory_image"/>

            <ImageView
                android:id="@+id/divider10"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:src="@drawable/divider"
                app:layout_constraintTop_toBottomOf="@id/signup"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/receive"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/darkgrey"
                android:text="Receive early access to new arrivals, sales, exclusive content, events and much more!"
                app:layout_constraintTop_toBottomOf="@id/divider10"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <EditText
                android:id="@+id/email"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:hint="Email Address"
                android:textColorHint="@color/black"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/receive"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <ImageView
                android:id="@+id/ourstory_image"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:src="@drawable/ourstory"
                app:layout_constraintTop_toBottomOf="@id/ourstory_text"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SUBMIT"
                android:textColor="@color/white"
                android:fontFamily="@font/tenor"
                android:textSize="15dp"
                android:layout_marginTop="30dp"
                android:background="@color/black"
                app:layout_constraintTop_toBottomOf="@id/email"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>