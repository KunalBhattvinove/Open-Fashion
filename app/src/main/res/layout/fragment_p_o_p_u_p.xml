<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Screens.POPUP">

    <ImageView
        android:id="@+id/close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:src="@drawable/ic_baseline_close_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:tint="@color/black" />

    <TextView
        android:id="@+id/payment_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PAYMENT SUCCESS"
        android:textColor="@color/black"
        android:fontFamily="@font/tenor"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@id/close"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/success"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_baseline_task_alt_24"
        app:layout_constraintTop_toBottomOf="@id/payment_success"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/paymentid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your payment was success\nPayment ID 100000"
        android:fontFamily="@font/tenor"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/success"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <ImageView
        android:id="@+id/divider11"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:src="@drawable/divider"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/paymentid"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate your purchase"
        android:fontFamily="@font/tenor"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/divider11"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


    <ImageView
        android:id="@+id/disappointed"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/disappointed"
        app:layout_constraintStart_toStartOf="@id/rate"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rate"
        />

    <ImageView
        android:id="@+id/happy"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/happy"
        app:layout_constraintTop_toBottomOf="@id/rate"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/inlove"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/inlove"
        android:layout_marginRight="10dp"
        app:layout_constraintEnd_toEndOf="@id/rate"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rate"
        />

    <Button
        android:id="@+id/submit"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:text="SUBMIT"
        android:fontFamily="@font/tenor"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/disappointed"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/backtohome"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="BACK TO HOME"
        android:textColor="@color/black"
        android:fontFamily="@font/tenor"
        android:textSize="20dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/disappointed"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@id/submit"/>

</androidx.constraintlayout.widget.ConstraintLayout>