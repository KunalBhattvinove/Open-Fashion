<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Screens.Cart">



    <TextView
        android:id="@+id/cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CART"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/tenor"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintLeft_toLeftOf="parent"
        />


    <ImageView
        android:id="@+id/items"
        android:layout_width="100dp"
        android:layout_height="155dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/product1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cart"/>

    <TextView
        android:id="@+id/brands"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LAMEREI"
        android:textColor="@color/black"
        android:fontFamily="@font/tenor"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/cart"
        app:layout_constraintStart_toEndOf="@id/items"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/productnames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Recycle Boucle Knit Cardigan Pink"
        app:layout_constraintTop_toBottomOf="@id/brands"
        app:layout_constraintStart_toEndOf="@id/items"
        android:layout_margin="10dp"/>


    <View
        android:id="@+id/cartline"
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:layout_marginTop="450dp"
        android:background="@color/lightgrey"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cart"/>

    <TextView
        android:id="@+id/subtotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUB TOTAL"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cartline"/>

    <TextView
        android:id="@+id/totalprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dollar"
        android:text="$ 240"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cartline"/>


    <ImageView
        android:id="@+id/removecart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_baseline_remove_circle_outline_24"
        app:layout_constraintStart_toEndOf="@id/items"
        app:layout_constraintTop_toBottomOf="@id/productnames"/>

    <TextView
        android:id="@+id/numbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="@color/black"
        android:layout_marginLeft="7dp"
        android:textSize="20dp"
        android:fontFamily="@font/tenor"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/removecart"
        app:layout_constraintTop_toBottomOf="@id/productnames"/>

    <ImageView
        android:id="@+id/addcart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_baseline_add_circle_outline_24"
        app:layout_constraintStart_toEndOf="@id/removecart"
        app:layout_constraintTop_toBottomOf="@id/productnames"/>

    <TextView
        android:id="@+id/productprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$ 120"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/dollar"
        app:layout_constraintTop_toBottomOf="@id/removecart"
        app:layout_constraintStart_toEndOf="@id/items"/>



    <TextView
        android:id="@+id/details"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="shipping charges, taxes and discount codes are calculated at the time of accounting."
        android:fontFamily="@font/tenor"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/subtotal"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/buynow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" CHECK OUT"
        android:paddingLeft="160dp"
        android:drawablePadding="5dp"
        android:fontFamily="@font/tenor"
        android:drawableStart="@drawable/ic_baseline_shopping_bag_24"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>