<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    tools:context=".Screens.Signup">

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SignUp"
        android:textColor="@color/black"
        android:fontFamily="@font/bodoni"
        android:textSize="40dp"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <EditText
        android:id="@+id/userlogin"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/grey"
        android:textColorHint="@color/black"
        android:layout_marginTop="30dp"
        android:hint=" Enter Name"
        android:textColor="@color/black"
        android:paddingLeft="10dp"
        android:background="@drawable/round"
        app:layout_constraintTop_toBottomOf="@id/heading"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <EditText
        android:id="@+id/mail"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/grey"
        android:layout_marginTop="10dp"
        android:drawablePadding="5dp"
        android:hint=" Enter Email ID"
        android:textColor="@color/black"
        android:paddingLeft="10dp"
        android:textColorHint="@color/black"
        android:background="@drawable/round"
        app:layout_constraintTop_toBottomOf="@id/userlogin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <EditText
        android:id="@+id/password"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:hint=" Password"
        android:paddingLeft="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:inputType="textPassword"
        android:background="@drawable/round"
        android:backgroundTint="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/mail"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />


    <TextView
        android:id="@+id/agree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I agree to the Terms and Conditions"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/tenor"
        android:textColor="@color/black"
        android:layout_marginLeft="70dp"
        app:layout_constraintTop_toBottomOf="@id/password"
        app:layout_constraintLeft_toLeftOf="parent"/>



    <Button
        android:id="@+id/bsignuppage"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:background="@drawable/round"
        android:text="sign up"
        android:textColor="@color/white"
        android:backgroundTint="@color/black"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/tenor"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/password"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/already"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already a member"
        android:textColor="@color/black"
        android:fontFamily="@font/tenor"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/bsignuppage"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>


    <TextView
        android:id="@+id/here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SignIn from here"
        android:textSize="15dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:fontFamily="@font/tenor"
        app:layout_constraintTop_toBottomOf="@id/already"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>