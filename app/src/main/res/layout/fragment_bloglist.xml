<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Screens.Bloglist">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-40dp"
        tools:layout_editor_absoluteY="-352dp">

        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <ImageView
                android:id="@+id/blogpost1"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:src="@drawable/blog1"
                android:layout_marginTop="80dp"
               app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/headblogpost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:text="2021 STYLE GUIDE THE BIGGEST FALL TRENDS"
                app:layout_constraintTop_toBottomOf="@id/blogpost1"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/desc1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/desc"
                android:textColor="@color/black"
                android:fontFamily="@font/tenor"
                android:padding="15dp"
                app:layout_constraintTop_toBottomOf="@id/headblogpost"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <ImageView
                android:id="@+id/blogpost2"
                android:layout_width="357dp"
                android:layout_height="450dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/blogpost2"
                app:layout_constraintTop_toBottomOf="@id/desc1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/desc2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/desc2"
                android:padding="15dp"
                android:textColor="@color/black"

                android:fontFamily="@font/tenor"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/blogpost2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

            <TextView
                android:id="@+id/posted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:text="Posted by OpenFashion | 3 days ago"
                android:fontFamily="@font/tenor"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/desc2"
                />

            <TextView
                android:id="@+id/fashionblogpost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#Fashion"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/tenor"
                android:background="@drawable/outline"
                app:layout_constraintTop_toBottomOf="@id/posted"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#Tips"
                android:textColor="@color/black"
                android:padding="5dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/tenor"
                android:background="@drawable/outline"
                android:textSize="18dp"
                android:layout_marginLeft="15dp"
                app:layout_constraintTop_toBottomOf="@id/posted"
                app:layout_constraintStart_toEndOf="@id/fashionblogpost"
                />

            <ImageView
                android:id="@+id/twitter"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/twitter"
                app:layout_constraintTop_toBottomOf="@id/fashionblogpost"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="130dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:tint="@color/black" />

            <ImageView
                android:id="@+id/instafollow"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/instablack"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fashionblogpost"
                android:layout_marginTop="40dp"
                app:tint="@color/black" />

            <ImageView
                android:id="@+id/youtube"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/youtube"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fashionblogpost"
                android:layout_marginRight="130dp"
                android:layout_marginTop="38dp"
                app:tint="@color/black" />

            <ImageView
                android:id="@+id/divider3"
                android:layout_width="125dp"
                android:layout_height="10dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/divider"
                app:layout_constraintTop_toBottomOf="@id/instafollow"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

            <TextView
                android:id="@+id/support"
                android:layout_width="184dp"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="support@openui.design"
                android:fontFamily="@font/tenor"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/divider3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/number"
                android:layout_width="184dp"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="+60 825 876"
                android:fontFamily="@font/tenor"
                android:textColor="@color/black"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/support"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="70dp"/>

            <TextView
                android:id="@+id/time"
                android:layout_width="184dp"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="08:00 - 22:00 - Everyday"
                android:fontFamily="@font/tenor"
                android:textColor="@color/black"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/number"
                android:layout_marginTop="5dp" />

            <ImageView
                android:id="@+id/divider5"
                android:layout_width="125dp"
                android:layout_height="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/divider"
                app:layout_constraintTop_toBottomOf="@id/time"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

            <TextView
                android:id="@+id/About"
                android:layout_width="47dp"
                android:layout_height="24dp"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:text="About"
                android:fontFamily="@font/tenor"
                app:layout_constraintTop_toBottomOf="@id/divider5"
                android:layout_marginLeft="90dp"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/contact"
                android:layout_width="67dp"
                android:layout_height="24dp"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:text="Contact"
                android:fontFamily="@font/tenor"
                app:layout_constraintTop_toBottomOf="@id/divider5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/blogg"
                android:layout_width="47dp"
                android:layout_height="24dp"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:text="Blog"
                android:layout_marginLeft="270dp"
                android:fontFamily="@font/tenor"
                app:layout_constraintTop_toBottomOf="@id/divider5"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginBottom="20dp"
                />



        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>