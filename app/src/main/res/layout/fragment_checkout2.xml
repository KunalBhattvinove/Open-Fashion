<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Screens.Checkout2">


    <TextView
        android:id="@+id/checkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHECKOUT"
        android:textColor="@color/black"
        android:fontFamily="@font/tenor"
        android:textSize="20dp"
        android:layout_marginTop="70dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/divider8"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:src="@drawable/divider"
        app:layout_constraintTop_toBottomOf="@id/checkout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/shipping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHIPPING ADDRESS"
        android:textColor="@color/black"
        android:fontFamily="@font/tenor"
        app:layout_constraintTop_toBottomOf="@id/divider8"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:textSize="15dp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/name_checkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iris Waton"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/tenor"
        app:layout_constraintTop_toBottomOf="@id/shipping"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/add_checkout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/tenor"
        android:textSize="17dp"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="606-3727 Ullamcorper.\n(786) 713-8616"
        app:layout_constraintTop_toBottomOf="@id/name_checkout"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/lightgrey"
        app:layout_constraintTop_toBottomOf="@id/add_checkout1"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/mastercard"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/mastercard"
        android:padding="10dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view4"/>

    <TextView
        android:id="@+id/carddetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Master Crad ending ****89"
        app:layout_constraintRight_toRightOf="parent"
        android:fontFamily="@font/tenor"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/view4"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightgrey"
        app:layout_constraintTop_toBottomOf="@id/mastercard"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/checkoutimage"
        android:layout_width="140dp"
        android:layout_height="190dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/product1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view5"
        />

    <TextView
        android:id="@+id/brand_checkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LAMEREI"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:fontFamily="@font/tenor"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/view5"
        app:layout_constraintStart_toEndOf="@id/checkoutimage"
        />

    <TextView
        android:id="@+id/checkout_names"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recycle Boucle Knit Cardigan Pink"
        android:fontFamily="@font/tenor"
        android:textSize="12dp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/brand_checkout"
        app:layout_constraintStart_toEndOf="@id/checkoutimage"
        />

    <ImageView
        android:id="@+id/remove_checkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_baseline_remove_circle_outline_24"
        app:layout_constraintTop_toBottomOf="@id/checkout_names"
        app:layout_constraintStart_toEndOf="@id/checkoutimage"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:fontFamily="@font/tenor"
        android:layout_marginTop="12dp"
        android:textSize="15dp"
        android:textAlignment="center"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@id/checkout_names"
        app:layout_constraintStart_toEndOf="@id/remove_checkout"/>

    <ImageView
        android:id="@+id/add_checkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_baseline_add_circle_outline_24"
        app:layout_constraintTop_toBottomOf="@id/checkout_names"
        app:layout_constraintStart_toEndOf="@id/remove_checkout"
        />

    <TextView
        android:id="@+id/price_checkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs 1200"
        android:textColor="@color/dollar"
        app:layout_constraintTop_toBottomOf="@id/remove_checkout"
        app:layout_constraintStart_toEndOf="@id/checkoutimage"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:textSize="20dp"/>




    <TextView
        android:id="@+id/total1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TOTAL"
        android:layout_marginLeft="20dp"
        android:textSize="17dp"
        android:textColor="@color/black"
        android:fontFamily="@font/tenor"
        android:layout_marginTop="140dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/price_checkout"/>

    <TextView
        android:id="@+id/ruppes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs"
        android:textSize="17dp"
        android:layout_marginTop="140dp"
        android:textColor="@color/dollar"
        android:layout_marginRight="70dp"
        app:layout_constraintTop_toBottomOf="@id/price_checkout"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <TextView
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1200"
        android:textSize="17dp"
        android:layout_marginTop="140dp"
        android:textColor="@color/dollar"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@id/price_checkout"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/buynow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CHECKOUT"
        android:drawablePadding="5dp"
        android:fontFamily="@font/tenor"
        android:drawableStart="@drawable/ic_outline_shopping_bag_24"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:background="@color/black"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/total1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>