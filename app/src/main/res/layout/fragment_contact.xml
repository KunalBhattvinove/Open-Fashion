<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Screens.Contact">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-40dp"
        tools:layout_editor_absoluteY="-352dp"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">




            <TextView
                android:id="@+id/contact_us"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="23dp"
                android:textColor="@color/black"
                android:layout_marginTop="50dp"
                android:text="CONTACT US"
                android:fontFamily="@font/tenor"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/divider9"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:src="@drawable/divider"
                app:layout_constraintTop_toBottomOf="@id/contact_us"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <ImageView
                android:id="@+id/chat"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/chat_contact"
                app:layout_constraintTop_toBottomOf="@id/divider9"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>


            <TextView
                android:id="@+id/desc_contactus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/contact"
                android:fontFamily="@font/tenor"
                android:textSize="15dp"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:padding="15dp"
                app:layout_constraintTop_toBottomOf="@id/chat"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <Button
                android:id="@+id/chatwithus"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="CHAT WITH US"
                android:fontFamily="@font/tenor"
                android:textSize="17dp"
                android:background="@color/black"
                android:textColor="@color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/desc_contactus"
                />

            <ImageView
                android:id="@+id/message"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/message"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/chatwithus"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/text_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/contact_chat"
                android:fontFamily="@font/tenor"
                android:textSize="15dp"

                android:padding="15dp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/message"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <Button
                android:id="@+id/textus"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="TEXT US"
                android:fontFamily="@font/tenor"
                android:textSize="17dp"
                android:background="@color/black"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_desc"
                />

            <ImageView
                android:id="@+id/twittercontact"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/twitter_contact"
                app:layout_constraintTop_toBottomOf="@id/textus"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/twittercontacttext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/twitter_contact"
                android:fontFamily="@font/tenor"
                android:textSize="15dp"
                android:textColor="@color/black"
               android:padding="15dp"
                app:layout_constraintTop_toBottomOf="@id/twittercontact"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"

                app:layout_constraintTop_toBottomOf="@id/twittercontacttext"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/twitter"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/twitter"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="130dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                    <ImageView
                        android:id="@+id/instafollow"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/instablack"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="30dp"/>
                    <ImageView
                        android:id="@+id/youtube"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/youtube"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginRight="130dp"
                        android:layout_marginTop="28dp"/>

                    <ImageView
                        android:id="@+id/divider3"
                        android:layout_width="125dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/divider"
                        app:layout_constraintTop_toBottomOf="@id/instafollow"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        />

                    <TextView
                        android:id="@+id/support"
                        android:layout_width="184dp"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:text="support@openui.design"
                        android:fontFamily="@font/tenor"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toBottomOf="@id/divider3"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:id="@+id/number"
                        android:layout_width="184dp"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:text="+60 825 876"
                        android:fontFamily="@font/tenor"
                        android:textColor="@color/black"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/support"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="70dp"/>

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="184dp"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:text="08:00 - 22:00 - Everyday"
                        android:fontFamily="@font/tenor"
                        android:textColor="@color/black"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/number"
                        android:layout_marginTop="5dp" />

                    <ImageView
                        android:id="@+id/divider5"
                        android:layout_width="125dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/divider"
                        app:layout_constraintTop_toBottomOf="@id/time"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        />

                    <TextView
                        android:id="@+id/About"
                        android:layout_width="47dp"
                        android:layout_height="24dp"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:text="About"
                        android:fontFamily="@font/tenor"
                        app:layout_constraintTop_toBottomOf="@id/divider5"
                        android:layout_marginLeft="90dp"
                        app:layout_constraintLeft_toLeftOf="parent"/>

                    <TextView
                        android:id="@+id/contact"
                        android:layout_width="67dp"
                        android:layout_height="24dp"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:text="Contact"
                        android:fontFamily="@font/tenor"
                        app:layout_constraintTop_toBottomOf="@id/divider5"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>

                    <TextView
                        android:id="@+id/blog"
                        android:layout_width="47dp"
                        android:layout_height="24dp"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:text="Blog"
                        android:layout_marginLeft="270dp"
                        android:fontFamily="@font/tenor"
                        app:layout_constraintTop_toBottomOf="@id/divider5"
                        app:layout_constraintLeft_toLeftOf="parent"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>






        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>